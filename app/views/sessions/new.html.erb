<%= form_tag sessions_path do %>
  <div class="field">
    <p><%= label_tag :username %>
        <%= text_field_tag :username, params[:username] %></p>

    <p><%= label_tag :password %>
        <%= password_field_tag :password %></p>
  
    <p><%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag :remember_me %></p>
 
    <p><%= submit_tag "Log in" %></p>
  </div>
<% end %>